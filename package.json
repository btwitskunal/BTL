  "description": "Unified BTL Marketing Execution Portal - Full Stack Application",
  "main": "updatedBackend/server.js",
  "scripts": {
    "start": "node updatedBackend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon updatedBackend/server.js",
    "dev:frontend": "cd Frontend && npm run dev",
